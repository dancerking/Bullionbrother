  "attributes": {
    "blockUniqId": {
      "type": "string",
      "default": ""
    },
    "areaPadding": {
      "type": "object",
      "default": {
        "device": "desktop"
      },
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}} { padding: {{areaPadding}} !important; }"
      }
    },
    "areaBGProperty": {
      "type": "object",
      "default": {
        "imageId": null,
        "imageUrl": "",
        "position": "",
        "attachment": "",
        "repeat": "",
        "size": ""
      },
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}}"
      }
    },
    "headingTextColor": {
      "type": "string",
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}} .cart_totals > h2 { color: {{headingTextColor}}; }"
      }
    },
    "headingSize": {
      "type": "string",
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}} .cart_totals > h2 { font-size: {{headingSize}}; }"
      }
    },
    "headingMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}} .cart_totals > h2 { margin: {{headingMargin}}; }"
      }
