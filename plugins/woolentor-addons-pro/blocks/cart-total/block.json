        "selector": "{{WOOLENTOR_WRAPPER}} .cart_totals .shop_table tr th,{{WOOLENTOR_WRAPPER}} .cart_totals .shop_table tr td { border-style: {{tableCellBorderType}}; }"
      }
    },
    "tableCellBorderWidth": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "dependency": [
          [
            {
              "key": "tableCellBorderType",
              "condition": "!=",
              "value": ""
            }
          ]
